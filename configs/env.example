# Environment
ENVIRONMENT=development

# Server Configuration
SERVER_PORT=:8080
SERVER_READ_TIMEOUT=10s
SERVER_WRITE_TIMEOUT=10s
SERVER_IDLE_TIMEOUT=60s
SERVER_SHUTDOWN_TIMEOUT=30s

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-with-at-least-32-characters-for-security
JWT_EXPIRATION=24h
JWT_REFRESH_TIME=168h
JWT_ISSUER=sentinel-gate
JWT_SIGNING_METHOD=HS256

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Rate Limiting
RATE_LIMIT_RPM=100
RATE_LIMIT_BURST=10
RATE_LIMIT_WINDOW=1m
RATE_LIMIT_CLEANUP=10m

# Circuit Breaker
CB_MAX_REQUESTS=3
CB_INTERVAL=60s
CB_TIMEOUT=60s
CB_READY_TO_TRIP=5

# Telemetry
TELEMETRY_ENABLED=true
PROMETHEUS_PORT=:9090
SERVICE_NAME=sentinel-gate
SERVICE_VERSION=1.0.0
TELEMETRY_ENVIRONMENT=development

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout
LOG_MAX_SIZE=100
LOG_MAX_BACKUPS=3
LOG_MAX_AGE=28

# Backend Services
TARGET_USERS_URL=http://localhost:3001
TARGET_ORDERS_URL=http://localhost:3002

# Proxy Configuration
PROXY_DEFAULT_TIMEOUT=30s
PROXY_FOLLOW_REDIRECTS=false 